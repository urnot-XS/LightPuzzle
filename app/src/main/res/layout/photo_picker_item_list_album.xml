<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/album_item_rl_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/photo_picker_album_item_bg"
                android:padding="16dp">

    <ImageView
        android:id="@+id/album_item_iv_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="#ccc"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/album_item_iv_cover"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/album_item_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Mark"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/album_item_tv_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="77"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/photo_picker_album_list_frg_ic_ind" />
</RelativeLayout>
